<section class="section">
    <h1 class="title">Gestor de productos en tiempo real</h1>
        
    <form id="form" class="product-form">
        <h3 class="subtitle">Agregar nuevo producto:</h3>

        <div class="form-group">
            <div class="form-label">
                <label class="label" class="label" for="title">Titulo:</label>
                <input type="text" id="title" name="title" required="" class="form-control" />
            </div>
            <div class="form-label">
                <label class="label" for="description">Descripción:</label>
                <input type="text" id="description" name="description" required="" class="form-control" />
            </div>
            <div class="form-label">
                <label class="label" for="code">Código:</label>
                <input type="text" id="code" name="code" required="" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="form-label">
                <label class="label" for="category">Categoría:</label>
                <input type="text" id="category" name="category" required="" class="form-control" />
            </div>
            <div class="form-label">
                <label class="label" for="price">Precio:</label>
                <input type="number" id="price" name="price" required="" class="form-control" min="0" />
            </div>
            <div class="form-label">
                <label class="label" for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" required="" class="form-control" min="0" />
            </div>
        </div>
        <div class="form-group form-submit">
            <label class="label" for="thumbnails">Imagen</label>
            <input type="file" id="thumbnails" name="thumbnails" onchange="previewImage()" class="form-control-file" />
            <div class="imagePreviewContainer">
                <div id="cancelButtonContainer" class="cancel-button-container"></div>
                <div id="imagePreview" class="image-preview"></div>
            </div>
            <button id="addProduct" type="submit" class="btn">
                Agregar Producto
            </button>
        </div>

    </form>

    <div class="section">
        <h1 class="title">Listado de productos en tiempo real</h1>
    </div>
    <div class="section">
        <table class="product-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th class="th-price">Precio</th>
                    <th>Categoría</th>
                    <th>Stock</th>
                    <th>Código</th>
                    <th>Imagen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="table-body" class="table-body"></tbody>
        </table>
    </div>
</section>

